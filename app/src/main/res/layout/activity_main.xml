<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/lineraLayout"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/img_register"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="REGISTER"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:textSize="22sp"

                    />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/square"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lineraLayout"
                android:rotation="45"
                android:layout_marginTop="-10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/imageView1"
                android:layout_margin="20dp"
                android:id="@+id/relativeLayout1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:id="@+id/imageView_userIcon"
                    android:src="@drawable/img_user"
                    android:tint="@color/white"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView_userIcon"
                    android:layout_alignBottom="@+id/imageView_userIcon"
                    android:background="@color/editTextBG"
                    android:hint="USERNAME"
                    android:paddingLeft="20dp"
                    android:id="@+id/etUsername"
                    android:textSize="20dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/relativeLayout1"
                android:layout_margin="20dp"
                android:id="@+id/relativeLayout2"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:id="@+id/imageView_passwordIcon"
                    android:src="@drawable/img_authentication"
                    android:tint="@color/white"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView_passwordIcon"
                    android:layout_alignBottom="@+id/imageView_passwordIcon"
                    android:background="@color/editTextBG"
                    android:hint="PASSWORD"
                    android:paddingLeft="20dp"
                    android:id="@+id/etPassword"
                    android:textSize="20dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/relativeLayout2"
                android:layout_margin="20dp"
                android:id="@+id/relativeLayout3"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:id="@+id/imageView_passwordIcon2"
                    android:src="@drawable/img_authentication"
                    android:tint="@color/white"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView_passwordIcon2"
                    android:layout_alignBottom="@+id/imageView_passwordIcon2"
                    android:background="@color/editTextBG"
                    android:hint="CONFIRM PASSWORD"
                    android:paddingLeft="20dp"
                    android:id="@+id/etCPassword"
                    android:textSize="20dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/relativeLayout3"
                android:layout_margin="20dp"
                android:id="@+id/relativeLayout4"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:id="@+id/imageView_emailIcon"
                    android:src="@drawable/img_email"
                    android:tint="@color/white"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView_emailIcon"
                    android:layout_alignBottom="@+id/imageView_emailIcon"
                    android:background="@color/editTextBG"
                    android:hint="EMAIL"
                    android:paddingLeft="20dp"
                    android:id="@+id/etEmail"
                    android:textSize="20dp"
                    />


            </RelativeLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSignUp"
                android:layout_below="@id/relativeLayout4"
                android:text="SIGN UP"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_below="@id/btnSignUp"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:text="Already a member? Login Here"
                android:textColor="@color/textColor"
                android:textSize="13sp"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

</ScrollView>